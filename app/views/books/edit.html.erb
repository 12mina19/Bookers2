<h1>Editing Book</h1>

<!--バリデーション：投稿の更新が失敗した時-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  
  <label>Opinion</label>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
  
<% end %>