<!--bookのindexページの左側の作成(User info)-->
<!--テンプレートファイルからの呼び出し-->
<%= render 'list', user: @user %>

<!--New Bookを作成-->
<h2>New book</h2>
<%= form_with model:@book do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Opinion</label>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<!--bookのindexページの右側の作成(Books)-->
<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
    
    
  <tbody>
    <!--<% if @user.profile_image.attached? %>-->
    <!--  <%= image_tag @user.profile_image, size: "100x100" %>-->
    <!--<% else %>-->
    <!--  <%= image_tag 'no_image', size: "100x100" %>-->
    <!--<% end %>-->
    
  
      <% @books.each do |book| %>
        <%= image_tag book.get_image %>
        <span><%= link_to book.title, books_path %></span>
        <span><%= book.body %></span>
      <% end %>
  
  </tbody>
</table>
  
  
