<h2>Books#show</h2>
<!--新規投稿が成功した時、You have created book successfully.と表示-->
<%= flash[:complete] %>

<!--左側の作成(User info)-->
<%= render 'books/list', user: @user %>



<!--New Bookを作成-->
<h2>New book</h2>
<%= form_with model: @book_new do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Opinion</label>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<!--Book detail画面-->
<h2>Book detail</h2>
<%= image_tag @book.user.get_profile_image(80,80) %>
<%= link_to @book.user.name, user_path(@user.id) %>
<!--nameからuser#showにとぶ-->
<%= @book.title %>
<%= @book.body %>

<% if @book.user == current_user %>
 <%= link_to "Edit", edit_book_path(@book.id) %>
 <%= link_to "Destroy", book_path(@book.id), method: :delete %>
<% end %>

