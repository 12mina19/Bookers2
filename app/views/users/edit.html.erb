<h1>Users#edit</h1>

<h2>User info</h2>
<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @user do |f| %>

 <label for="user_name">Name</label>
 <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
 
 
 <label for="user_image">Image</label>
 <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>


 <label for="user_introduction">Introduction</label>
 <%= f.text_area :introduction %>
 
 
 <%= f.submit 'Update User' %>
 
<% end %>
