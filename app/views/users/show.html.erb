<h1>Users#show</h1>
<!--ユーザー新規投稿が成功時、Welcome! You have signed up successfully.を表示-->
<%= notice %>

<!--ユーザのプロフィール更新が成功時、You have updated user successfully.を表示-->
<!--投稿の更新が成功時、You have updated book successfully.を表示-->
<%= flash[:complete] %>


<!--左側の作成(User info)-->
<%= render 'books/list', user: @user %>


<!--New Bookを作成-->
<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Opinion</label>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<!--右側のBooks作成-->
<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= image_tag book.user.get_profile_image(80,80) %>
      </td>
      <td>
        <%= link_to book.title, book_path(book.id) %> 
        <!--books#showへとぶ-->
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


